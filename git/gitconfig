# use separate file for username / github token / etc
[include]
  path = ~/dotfiles/git/gitconfig_local
[core]
	autocrlf = false
	excludesfile = ~/.gitignore_global
	editor = vim
[color]
	ui = always
[push]
	default = upstream
[pull]
	rebase = true
[branch]
	autosetuprebase = always
[diff]
	tool = opendiff
	noprefix = true
[difftool "opendiff"]
	cmd = /usr/bin/opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" 2>/dev/null | cat
[alias]
	opendiff = difftool --no-prompt --tool opendiff --dir-diff
[merge]
	tool = opendiff
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = osxkeychain
[user]
	name = Napoleon Ahiable
	email = 219075+thepreacher@users.noreply.github.com
